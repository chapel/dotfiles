[global/wm]
margin-top = 5
margin-bottom = 5


[colors]
background = ${xrdb:color0}
background-alt = ${xrdb:color8}
foreground = ${xrdb:color15}
foreground-alt = ${xrdb:color7}
primary = ${xrdb:color8}
seconary = ${xrdb:color7}
alert = ${xrdb:color3}

linecolor = ${xrdb:color15}
bordercolor = ${xrdb:color15}
accent = ${xrdb:color15}


[bar/Bar]
bottom = false
dock = false
wm-restack = i3
override-redirect=true
width = 100%
height = 22

enable-ipc = true

padding-left = 0
padding-right = 1

module-margin-right = 1
module-margin-left = 0

modules-left = cpu memory eth
modules-center = i3
modules-right = updates volume date menu0

background = ${colors.background}
foreground = ${colors.foreground}

underline-size = 2
underline-color = ${colors.linecolor}

tray-position = right
tray-detached = false
tray-offset-x = 
tray-maxsize = 
tray-padding = 

font-0 = DejaVu Sans Mono:size=10;0

[module/xwindow]
type = internal/xwindow
label = %title%
label-maxlen = 30


[module/i3]
type = internal/i3
format = <label-mode> <label-state>
index-sort = true

label-focused-font = 4
label-unfocused-font = 4
label-urgent-font = 4
label-visible-font = 4 

label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-padding = 1

label-unfocused = %index%
label-unfocused-padding = 1
label-unfocused-underlinde = ${colors.linecolor}

label-urgent = %index%!
label-urgent-padding = 1
label-urgent-foreground = ${colors.foreground}

label-visible = %index%
label-visible-foreground = ${colors.foreground}
label-visible-padding = 1


[module/cpu]
type = internal/cpu
interval = 1

label = CPU %percentage%%
label-underline = ${colors.linecolor}
format = <label>
padding= 2

ramp-coreload-0 = ▁
ramp-coreload-1 = ▂
ramp-coreload-2 = ▃
ramp-coreload-3 = ▄
ramp-coreload-4 = ▅
ramp-coreload-5 = ▆
ramp-coreload-6 = ▇
ramp-coreload-7 = █
ramp-coreload-underline = ${colors.linecolor}


[module/memory]
type = internal/memory
interval = 2

label = %gb_free%
label-underline = ${colors.linecolor}
label-foreground = ${colors.foreground}

[module/eth]
type = internal/network
interface = enp11s0
interval = 3.0

format-connected-padding = 1
format-disconnected-padding = 1

format-connected-underline = ${colors.linecolor}
format-disconnected-underline = ${colors.linecolor}

label-connected = %local_ip% %downspeed:9% %upspeed:9%
label-disconnected = not connectd
label-disconnected-foreground = ${colors.foreground-alt}


[module/date]
type = internal/date
date = %A %m/%d %r
interval = 1
format-underline = ${colors.linecolor}
format-foreground = ${colors.foreground}
format-padding = 1


[module/volume]
type = internal/volume

format-volume = <bar-volume>

label-volume = VOL
label-volume-foreground = ${root.foreground}

label-muted = sound muted
label-muted-foreground = ${colors.foreground}

bar-volume-width = 10
bar-volume-foreground-0 = ${colors.accent}
bar-volume-foreground-1 = ${colors.accent}
bar-volume-foreground-2 = ${colors.accent}
bar-volume-foreground-3 = ${colors.accent}
bar-volume-foreground-4 = ${colors.accent}
bar-volume-foreground-5 = ${colors.accent}
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 4
bar-volume-indicator-foreground = ${colors.foreground}
bar-volume-fill = ─
bar-volume-fill-font = 4
bar-volume-empty = ─
bar-volume-empty-font = 4
bar-volume-empty-foreground = ${colors.foreground-alt}


[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 65

format = <label>
format-underline = ${colors.linecolor}
format-warn = <label-warn>
format-warn-underline = ${colors.alert}

format-padding = 1
format-warn-padidng = 1

label =  %temperature%
label-warn =  %temperature%

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = #55


[module/menu0]
type = custom/menu

format = <label-toggle> <menu>
format-underline = ${colors.linecolor}
format-padding = 1

menu-0-0 = " Shutdown "
menu-0-0-exec = shutdown now
menu-0-1 = " Restart "
menu-0-1-exec = shutdown -r now

label-open = Power
label-close = Cancel
label-separator = |

[module/updates]
type = custom/script
interval = 1200

format = <label>
format-underline = ${colors.linecolor}
format-padding = 1
label= "%output:0:30%"

exec = .config/polybar/pkg.sh 
exec-if = "ping -q -w 2 -c 1 google.com > /dev/null"
